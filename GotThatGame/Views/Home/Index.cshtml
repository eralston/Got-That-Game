@{
    ViewBag.Title = "Got That Game?";
}

<section class='twoway'>
    <div class="wrapper">
        <label>Username:</label>
        <input type="text" id="username" />
        <input type="button" id="connect" value="Connect to Steam" />
    </div>
    <div class='wrapper'>
        <h2>Discover What to Play</h2>
        <p>Connect to your <a href="http://steampowered.com">Steam</a> account to compare games with your friends. Login to get started!</p>
    </div>
</section>
<section class="main-app-window">
    <div id="_friendList" class="wrapper">
    </div>
    <div id="_gameList" class="wrapper">
    </div>
</section>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" type="text/javascript"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.3/underscore-min.js" type="text/javascript"></script>
<script src="~/Scripts/Steam.js" type="text/javascript"></script>
